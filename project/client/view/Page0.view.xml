<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="victoria.controller.Page0" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Page showHeader="false" title="Hostel Application" showFooter="true" showNavButton="false" navButtonPress="_onPageNavButtonPress">
		<content>
			<VBox alignItems="Center" direction="Column" fitContainer="true" width="100%" height="100%" justifyContent="Center" renderType="Div" visible="true" displayInline="false">
				<items>
					<form:Form width="100%" editable="false" visible="true">
						<form:title>
							<core:Title text="Enter Login Details" level="H1" icon="sap-icon://visits"/>
						</form:title>
						<form:formContainers>
							<form:FormContainer visible="true">
								<form:formElements>
									<form:FormElement visible="true">
										<form:label>
											<Label text="" design="Bold" width="100%" required="false" textAlign="Center" textDirection="Inherit" visible="true"/>
										</form:label>
										<form:fields>
											<Input id="userid" textAlign="Center" placeholder="User Name / Email Id" type="Text" width="auto"/>
										</form:fields>
									</form:FormElement>
									<form:FormElement visible="true">
										<form:label>
											<Label text="" design="Bold" width="100%" required="false" textAlign="Center" textDirection="Inherit" visible="true"/>
										</form:label>
										<form:fields>
											<Input placeholder="Password (Case-Sensitive)" textAlign="Center" type="Password" id="pwd" submit="onSubmit" enabled="true" visible="true" width="auto" maxLength="0"/>
										</form:fields>
									</form:FormElement>
									<form:FormElement visible="true">
										<form:label>
											<Label text="" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
										</form:label>
										<form:fields>
											<Button text="Login" press="_onButtonPress" type="Emphasized" icon="sap-icon://feeder-arrow" iconFirst="false" width="auto" iconDensityAware="false"/>
										</form:fields>
									</form:FormElement>
								</form:formElements>
								<form:title/>
							</form:FormContainer>
						</form:formContainers>
						<form:layout>
							<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
						</form:layout>
					</form:Form>
				</items>
				<layoutData/>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<ToolbarSpacer width=""/>
					<Text text="Copyright Â© - Fiori Online Trainings" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
					<ToolbarSpacer width=""/>
				</content>
			</OverflowToolbar>
		</footer>
